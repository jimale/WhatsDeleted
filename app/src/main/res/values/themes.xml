<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SooCeliFariimaha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        Bottom navigation bar icon color-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" >@color/white</item>
    </style>

    <!--    Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/startup_logo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/icon_color</item>
        <!--         if version is above Android M change the color of the status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        Setting color to the bottom navigation bar -->
        <item name="android:navigationBarColor" >@color/icon_color</item>
    </style>

</resources>