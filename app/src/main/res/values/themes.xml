<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsDeleted" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--        Bottom navigation bar icon color-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!--    Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/startup_logo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/icon_color</item>
        <!--         if version is above Android M change the color of the status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        Setting color to the bottom navigation bar -->
        <item name="android:navigationBarColor">@color/icon_color</item>
    </style>

    <!--  Chip padding and his TextSize-->
    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">25dp</item>
        <item name="android:textAppearance">@style/SmallerText</item>
    </style>

    <style name="SmallerText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Toolbar title text size-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_only</item>
    </style>

</resources>